<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LocalDatabaseDemo.UpdatePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="ID:"/>
                <Entry x:Name="CategoryIDEntry"
                       Placeholder="Enter CategoryID"/>
                <Button Text="Find"
                        x:Name="btnFind"
                        Clicked="BtnFind_Clicked"/>
            </StackLayout>
            <Label Text="DATOS DE CATEGORIA:"
                   FontAttributes="Bold"
                   FontSize="Medium"/>
            <Label Text="ID:"/>
            <Entry x:Name="CategoryIDFindedEntry"/>
            
            <Label Text="Name:"/>
            <Entry x:Name="CategoryNameFindedEntry"/>

            <Label Text="Description:"/>
            <Entry x:Name="CategoryDesFindedEntry"/>
            
            <Button Text="Update"
                    x:Name="btnUpdateCategory"
                    Clicked="BtnUpdateCategory_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>